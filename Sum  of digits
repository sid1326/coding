#include <stdio.h>
int main()
{
    int num;
    int unit, tens, hundredth;
    printf("Enter the desired number = ");
    scanf("%d",&num);
    /* 225 % 10 implies 225/10 and then digit in the tenth place that is 5
    - 225 % 100 implies 225/100 = 2.25 and upto hundredth place implies 25 */
    unit = num % 10;
    tens = (num / 10 ) % 10;
    hundredth = num / 100;
    printf("The total sum of the digits of the given 3 digit number = %d", unit + tens + hundredth);

    return(0);

}


