#include<stdio.h>
int main()
{
    int x,n,term = 1, sum = 1;
    printf("Enter x: ");
    scanf("%d", &x);
    printf("Enter n : ");
    scanf("%d", &n);
    for(int i =1; i<=n; i++)
    {
        term = 1;
        for(int j =1;j<=i;j++)
        {
            term*=x;
        }
        sum = sum + term;
    }
    printf("The required sum is : %d", sum);
    return 0;
}
