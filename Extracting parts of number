#include <stdio.h>
int main()
{
    double number;
    printf("The desired number = ");
    scanf("%lf",&number);
    printf("The integral part = %d\n",(int)number);

    printf("The decimal part = %lf\n",number - (int)number);
    return (0);
}

OR

#include <stdio.h>
int main()
{
    float num;
    int integer;
    float decimal;
    printf("Enter the desired number = ");
    scanf("%f",&num);
    integer = (int)num;
    decimal = num - (int)num;
    printf("Integer part = %d\n", integer);
    printf("Decimal part of given number = %f",decimal);

    return(0);

}
