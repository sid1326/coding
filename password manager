#include<stdio.h>
main()
{
    char version, pass;
    printf("Enter '+' for index and '-' for password : ");
    scanf("%c", &version);
    switch(version)
    {
        case '+' : printf("Welcome to the password index \n");
                   printf("______________________________\n");
                   printf("Instagram = I\n");
                   printf("Twitter = T\n");
                   printf("Gmail = G\n");
                   printf("______________________________\n");
        break;

        case '-' : printf("Enter the code to get the password : ");
                   scanf("%c", &pass);
                   printf("\n");
                   switch(pass)
                   {
                       case 'I' : printf("The password for the instagram is 123456");
                       break;

                       case 'G' : printf("The password for the Gmail is 456123");
                       break;

                       case 'T' : printf("The password for twitter is 789456");
                       break;


                   }
         break;

         default: printf("rechek the symbols again");
         break;
    }

    return 0;

}
